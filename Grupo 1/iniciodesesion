    private void button1ActionPerformed(java.awt.event.ActionEvent evt) {                                        
        String usuario = lblUsuario.getText();
     String contrasenia = lblContrasenia.getText();
     
     
     if(usuario.isEmpty() || contrasenia.isEmpty()){
         System.out.println("ingrese usuario y contraseña");  
          JOptionPane.showMessageDialog(null, "Ingrese su nombre de usuario y contraseña");
     }else{
    
    String []datos = new String[3];
        try {
            Statement st= cn.createStatement();
            ResultSet rs = st.executeQuery("SELECT * FROM usuarios WHERE Nom_usuario='"+usuario+"' AND Contrasenia_usuario ='"+contrasenia+"'");
            rs.last();
        int encontrado=rs.getRow();
         //System.out.println(String.valueOf(encontrado));
         if(encontrado==1)
         { 
           Menu m = new Menu(rs.getString(1));
           m.setBounds(10,20,300,200);
           m.setVisible(true);
           
         }
         else
         {
             JOptionPane.showMessageDialog(null, "Sus datos son incorrectos, reviselos");
         }
        } catch (SQLException ex) {
            Logger.getLogger(iniciodesesion.class.getName()).log(Level.SEVERE, null, ex);
        }
     }// TODO add your handling code here:
    }                                       

